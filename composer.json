{
    "name": "argopecten/aegir-composer",
    "description": "Composer-based Aegir 3.x install",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "petergerner",
            "role": ""
        }
    ],
    "repositories": {
        "drupal": {
              "type": "composer",
              "url": "https://packages.drupal.org/7"
        },
        "hostmaster": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/hostmaster"
        },
        "hosting_deploy": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/hosting_deploy"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "composer/installers": "^1.2",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/preserve-paths": "^0.1",
        "drupal/composer_autoloader": "^1.0",
        "drupal/drupal": "7.71",
        "drush/drush": "^8.0",
        "symfony/filesystem": "~2.7|^3",
        "webflo/drupal-finder": "^1.0.0",
        "argopecten/hostmaster": "dev-master"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion",
            "bash scripts/composer/preinstall/lamp-config.sh < /dev/tty"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::removeInternalFiles",
            "bash scripts/composer/postinstall/aegir-user.sh  < /dev/tty",
            "bash scripts/composer/postinstall/drush.sh",
            "bash scripts/composer/postinstall/provision.sh",
            "bash scripts/composer/postinstall/hostmaster.sh"
        ],
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "hostmaster": ["type:drupal-core"],
            "hostmaster/profiles/{$name}/": ["type:drupal-profile"],
            "hostmaster/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "hostmaster/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "hostmaster/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "hostmaster/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/SebCorbin/composer-patches/commit/1cb9bacba51f8bba0c5f3f322c3bb61e4ceae974.patch"
            }
        },
        "preserve-paths": [
            "hostmaster/sites"
        ]
    }
}
